{
  "name": "{{name}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "author": "{{author}}",
  "bugs": {
    "url": "{{{gitRepo}}}/issues"
  },
  "homepage": "{{{gitRepo}}}",
  "repository": {
    "type": "git",
    "url": "{{{gitRepo}}}.git"
  },
  "main": "src/index.js",
  "files": [
    "src/*"
  ],
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/runtime": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-native": "^3.6.0",
    "jest": "^24.0.0",
    "jest-enzyme": "^7.0.2",
    "jsdom": "^15.1.1",
    "react": "16.8.3",
    "react-dom": "^16.8.6",
    "react-native": "0.59.8"
  },
  "scripts": {
    "test:lint": "./node_modules/.bin/eslint \"src/*.js\"",
    "test": "npm run test:lint && ./node_modules/.bin/jest",
    "postinstall": "cd demo && npm install && cd .."
  },
  "jest": {
    "preset": "react-native",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-tests.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/demo/"
    ],
    "collectCoverage": true
  },
  "license": "{{license}}"
}
